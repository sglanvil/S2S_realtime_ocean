# -*-Makefile-*-
#

include ../macros.make

CPPFLAGS =  @TRIPOLAR@ @JOT@ @SPHERICAL@ @PLANE@ @VARIABLE@ @BBL@ @CYCLIC@
LINKOPT = 
LIB     = lib.o

MODULE  = 

OBJLIB  =

TARGETS = ann2clim_g

all: $(MODULE) $(LIB) $(TARGETS)

#
#     SUFFIXES rule
#
.SUFFIXES: 
.SUFFIXES: .F90 .o
.F90.o:
	$(FC) $< $(FOPTION) $(CPPFLAGS) -c
#
#     clean: 
#
clean:
	$(RM) *.o *.trace *~ *.mod *.M core $(LIB)
#

$(LIB) : $(OBJLIB)
	$(AR) $(LIB) $(OBJLIB)

ann2clim_g  : $(LIB) ann2clim_g.o
	$(FC) -o $@ ann2clim_g.o $(LIB)
