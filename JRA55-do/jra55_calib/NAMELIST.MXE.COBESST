&nml_grid_size
  imut                  = 360,
  jmut                  = 180,
  km                    = 1,
  ksgm                  = 1,
/

&nml_coordinate
  lspherical           = .true.,
/

&nml_vert_grid
  dz_const_cm          = 1.0d2,
/

&nml_horz_grid
  lon_west_end_of_core = 1.0d0,
  lat_south_end_of_core = -89.0d0,
  dx_const_deg=1.0d0
  dy_const_deg=1.0d0
/

&nml_topo
  file_topo          = "../linkdir/COBESST/data/topo-cobesst.d",
/

&nml_record_date
  rec_first_date        = 1958, 1, 1, 0, 0, 0,
  rec_last_date         = 2013, 1, 1, 0, 0, 0,
  rec_interval_date     =    0, 0, 0, 3, 0, 0,
/
